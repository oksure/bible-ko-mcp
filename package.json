    "christianity",
    "model-context-protocol",
    "claude",
    "bskorea"
  ],
  "author": "oksure",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "cheerio": "^1.0.0",
