{
  "name": "bible-ko-mcp",
  "version": "0.1.0",
  "description": "MCP server for Korean Bible (bskorea.or.kr)",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "bible-ko-mcp": "build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "USAGE.md",
    "LICENSE"
  ],
  "scripts": {
